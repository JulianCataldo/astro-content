---
// import './Default.scss';

// NOTE: We're opting out of HMR totally when treating CSS separately
import css from '../dist/styles.css?raw';

/* —————————————————————————————————————————————————————————————————————————— */

import Base from './Base.astro';
---

<Base>
  <Fragment slot="head">
    <script is:inline>
      const socket = new WebSocket('ws://localhost:9054', 'vite-hmr');
      socket.addEventListener(
        'open',
        () => {
          // eslint-disable-next-line no-console
          console.log('open');
        },
        { once: true },
      );
    </script>

    <!-- HACK: Bypass Astro (S)CSS handling -->
    <style set:html={css}></style>

    <!-- _ -->
  </Fragment>
  <Fragment slot="body">
    <slot />
  </Fragment>
</Base>
